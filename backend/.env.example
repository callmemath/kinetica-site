# Environment Configuration for Kinetica Fisioterapia Backend
# Copy this file to .env and update the values for your production environment

# Environment (REQUIRED)
NODE_ENV=production

# Server Configuration (REQUIRED)
PORT=3001

# Frontend URL (REQUIRED - Update with your production domain)
FRONTEND_URL=https://your-production-domain.com

# JWT Secret (REQUIRED - Generate with: openssl rand -base64 64)
JWT_SECRET=GENERATE_A_SECURE_SECRET_KEY_HERE

# Database (REQUIRED - Update for production database)
DATABASE_URL="file:./production.db"
# For PostgreSQL: DATABASE_URL="postgresql://username:password@localhost:5432/database"

# Email Configuration (REQUIRED)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=your-email@gmail.com

# Security Settings (OPTIONAL - Defaults will be used if not set)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT_MINUTES=30

# Logging (OPTIONAL)
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false

# API Key (OPTIONAL - For additional API security)
# API_KEY=your-api-key-here

# Additional Security (OPTIONAL)
# ALLOWED_IPS=127.0.0.1,192.168.1.0/24

# Monitoring (OPTIONAL)
# SENTRY_DSN=your-sentry-dsn-here

# ALTERNATIVE EMAIL PROVIDERS:

# SendGrid Example:
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="apikey"
# SMTP_PASS="your-sendgrid-api-key"
# FROM_EMAIL="noreply@your-domain.com"

# Mailgun Example:
# SMTP_HOST="smtp.mailgun.org"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="your-mailgun-smtp-login"
# SMTP_PASS="your-mailgun-smtp-password"
# FROM_EMAIL="noreply@your-domain.com"
