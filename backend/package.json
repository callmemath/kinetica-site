{
  "name": "kinetica-backend",
  "version": "1.0.0",
  "description": "Backend API for Kinetica Fisioterapia Genova",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:production": "NODE_ENV=production node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:production": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "seed": "tsx prisma/seed.ts",
    "staff:create": "tsx scripts/create-staff.ts",
    "staff:manage": "tsx scripts/manage-staff.ts",
    "staff:list": "tsx scripts/manage-staff.ts list",
    "setup:production": "tsx scripts/setup-production.ts",
    "security:check": "tsx scripts/setup-production.ts -- --skip-db --skip-validation",
    "generate:jwt": "tsx scripts/setup-production.ts -- --generate-jwt --skip-db --skip-validation --skip-security",
    "production:deploy": "npm run build && npm run db:migrate:production && npm run start:production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "echo \"Linting not configured\" && exit 0"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node-fetch": "^2.6.13",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "prisma": "^6.13.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  }
}
